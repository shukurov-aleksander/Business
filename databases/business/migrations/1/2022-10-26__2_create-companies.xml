<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="1" author="Aleksander.shukurov@gmail.com">
        <comment>create table "companies"</comment>
        <createTable tableName="companies">
            <column name="id" type="bigserial" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="company_name" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="tax_number" type="varchar(16)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="user_id" type="bigint"/>
            <column name="is_government_agency" type="boolean"/>
            <column name="company_status_id" type="bigint">
               <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="Aleksander.shukurov@gmail.com">
        <comment>add foreign key to "company_status_id" column</comment>
        <sql>
            ALTER TABLE companies
                ADD CONSTRAINT fk_company_company_statuses FOREIGN KEY (company_status_id) REFERENCES company_statuses (id)
        </sql>
        <rollback>
            <sql>
                ALTER TABLE details DROP CONSTRAINT fk_company_company_statuses
            </sql>
        </rollback>
    </changeSet>
</databaseChangeLog>