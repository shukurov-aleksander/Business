<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="1" author="Aleksander.shukurov@gmail.com">
        <comment>add column "company_status_id" to "companies" table</comment>
        <sql>
            ALTER TABLE companies ADD COLUMN company_status_id BIGINT NOT NULL
        </sql>
        <rollback>
            <sql>
                ALTER TABLE companies DROP COLUMN company_status_id
            </sql>
        </rollback>
    </changeSet>
</databaseChangeLog>